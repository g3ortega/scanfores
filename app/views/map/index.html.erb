<script><%= render 'map.js' %></script>

<div id="view">
    <div id="map"></div>

    <div class="controllers">
	<!-- MySemiModal -->
	<div id="MySemiModal">
	    <div class="title">Report Type</div>
	    <div class="report_options">
            <a href="#" class="ball fire" id="add_fire_button"><i></i><span class="text">Incendio</span></a>
            <a href="#" class="ball tree" id="add_deforestation_button"><i></i><span class="text">Tala</span></a>
            <a href="#" class="ball bee" id="add_plague_button"><i></i><span class="text">Plaga</span></a>
        </div>
	</div>
	<div class="add_report_div">
	    <a href="#" title="add report" id="add_report">
		<span class="text"> Add Report</span>
		<span class="button">+</span>
	    </a>
	</div>

	<script>
	 jQuery(document).ready(function($) {
	     $('#add_report').click(function(event) {
		 $('#MySemiModal').toggle(300);
	     });

         $('#add_fire_button').click(function(event) {
             $('#MySemiModal .title').html('Agregar Alerta de Incendio');
             $('.report_options').html("<%= escape_javascript(render 'alert_form') %>")
//             $('#modalSendAlert').toggle(300);
         });

         $('#add_deforestation_button').click(function(event) {
             $('#MySemiModal .title').html('Agregar Alerta de Despale');
             $('.report_options').html("<%= escape_javascript(render 'alert_form') %>")
         });

         $('#add_plague_button').click(function(event) {
             $('#MySemiModal .title').html('Agregar Alerta de Plagas');
             $('.report_options').html("<%= escape_javascript(render 'alert_form') %>")
         });

     });
	</script>



    </div>
</div>
